    </servlet>
    <servlet-mapping>
        <servlet-name>alertsServlet</servlet-name>
        <url-pattern>/alerts</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>getAlertsServlet</servlet-name>
        <servlet-class>com.syxy.servlet.alerts.getAlertsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAlertsServlet</servlet-name>
        <url-pattern>/alerts.one</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>newsServlet</servlet-name>
        <servlet-class>com.syxy.servlet.news.newsServlet</servlet-class>
