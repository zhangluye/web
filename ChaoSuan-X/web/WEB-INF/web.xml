        <url-pattern>/news.one</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>searchNews</servlet-name>
        <servlet-class>com.syxy.servlet.news.searchNews</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchNews</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>test01</servlet-name>
        <servlet-class>com.syxy.TestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>test01</servlet-name>
        <url-pattern>/t1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>pageCount</servlet-name>
        <servlet-class>com.syxy.Count</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>pageCount</servlet-name>
        <url-pattern>/pc</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>characterEncodingFilter</filter-name>
        <filter-class>com.syxy.filter.CharacterEncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>characterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>