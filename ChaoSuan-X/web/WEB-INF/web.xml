    </servlet-mapping>
    <servlet>
        <servlet-name>getMediaServlet</servlet-name>
        <servlet-class>com.syxy.servlet.media.getMediaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getMediaServlet</servlet-name>
        <url-pattern>/media.one</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>admicServlet</servlet-name>
        <servlet-class>com.syxy.servlet.admic.admicServlet</servlet-class>
